@model Testing_System.Models.Test.CreateTestModel
@{
    ViewData["Title"] = "Create Test";
}

<form class="d-flex justify-content-center mt-3" method="post" asp-controller="Home" asp-action="Finish" enctype="multipart/form-data">
    <div class="form-group d-flex justify-content-center flex-column gap-3">

        <div style="width:350px">

            <label for="InputQuestion">Qustions count @ViewData["CounterQuestions"]</label>
        </div>
        <div style="width:350px">

            <label for="InputAnswer">Input start questions count</label>
            <input type="text" asp-for="StartCount" class="form-control" id="Description" placeholder="Input start questions count">

        </div>
        <button type="submit" class="btn btn-primary" style="width: 200px">Finish test</button>
    </div>
</form>